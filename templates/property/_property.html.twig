<div class="card mb-4">

    {% if property.filename %}
    {#    <img src="/images/properties/{{ property.filename }}"alt="card-img-top" style="width: 100%; height:auto;"> #}
         <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}"alt="card-img-top" style="width: 100%; height:auto;">
    {% else %}
      <img src="{{ '/images/properties/maison_default.jpg' | imagine_filter('thumb') }}"alt="card-img-top" style="width: 100%; height:auto;">
    
    {% endif %}
    <div class="card-body">
        <h5><div class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5> 
            <p class="card-text">{{ property.surface }} m2 Ã  {{ property.city }} ({{ property.postalcode}})</p>
            <div class="text-primary" style="font-size:2rem; font-weight: bold;">
            {{ property.formattedPrice }}
        </div>
    </div>
</div>